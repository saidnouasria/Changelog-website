generator client {
  provider = "prisma-client-js"
}



datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String   @unique
  password  Int
  createdAT DateTime @default(now())

  products Product[]
}

model Product {
  id          String   @id @default(uuid())
  createdAT   DateTime @default(now())
  name        String   @unique
  BelongsToId String
  BelongsTo   User     @relation(fields: [BelongsToId], references: [id])
}
